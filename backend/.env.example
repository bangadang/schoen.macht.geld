# Database
DATABASE_URL=sqlite+aiosqlite:///./data/stocks.db

# Debug mode
DEBUG=false

# CORS origins (JSON array)
CORS_ORIGINS=["http://localhost:3000"]

# Logging
LOGURU_LEVEL=INFO

# Stock base price
STOCK_BASE_PRICE=1000

# Background price updates
PRICE_TICK_INTERVAL=60
PRICE_TICK_ENABLED=true

# Price snapshots (for graphs and percentage change)
SNAPSHOT_INTERVAL=60
SNAPSHOT_RETENTION=30

# Image uploads
IMAGE_DIR=./data/images
MAX_IMAGE_SIZE=20971520
IMAGE_MAX_DIMENSION=1920
IMAGE_QUALITY=85

# AtlasCloud AI (https://www.atlascloud.ai/)
ATLASCLOUD_API_KEY=your_api_key_here
ATLASCLOUD_BASE_URL=https://api.atlascloud.ai

# AI models (swap to try different models)
ATLASCLOUD_TEXT_MODEL=google/gemini-3-flash-preview
ATLASCLOUD_IMAGE_MODEL=black-forest-labs/flux-schnell
ATLASCLOUD_VIDEO_T2V_MODEL=alibaba/wan-2.2/t2v-480p-ultra-fast
ATLASCLOUD_VIDEO_I2V_MODEL=alibaba/wan-2.2/i2v-480p-ultra-fast

# AI task processing
AI_TASK_POLL_INTERVAL=10
AI_TASK_TIMEOUT=300

# Swipe settings
SWIPE_BUCKET_DURATION=20
SWIPE_BUCKET_COUNT=30
SWIPE_BASE_PERCENT_MIN=0.01
SWIPE_BASE_PERCENT_MAX=0.03
SWIPE_RANDOM_MULTIPLIER_MIN=0.5
SWIPE_RANDOM_MULTIPLIER_MAX=2.0
SWIPE_STREAK_THRESHOLD=5
SWIPE_STREAK_PENALTY=0.7
