# Database
DATABASE_URL=sqlite+aiosqlite:///./data/stocks.db

# Debug mode
DEBUG=false

# CORS
CORS_ORIGINS=["http://localhost:3000"]
CORS_ALLOW_ALL=false

# Server/paths
ROOT_PATH=
BASE_URL=http://localhost:8080

# Logging
LOGURU_LEVEL=INFO

# Stock base price
STOCK_BASE_PRICE=1000

# Background price updates
PRICE_TICK_INTERVAL=60
PRICE_TICK_ENABLED=true

# Price snapshots (for graphs and percentage change)
SNAPSHOT_INTERVAL=10
SNAPSHOTS_PER_MARKET_DAY=30
SNAPSHOT_RETENTION=90

# Image uploads
STATIC_DIR=data/static
MAX_IMAGE_SIZE=20971520
IMAGE_MAX_DIMENSION=1920
IMAGE_QUALITY=85

# AtlasCloud AI (https://www.atlascloud.ai/)
ATLASCLOUD_API_KEY=your_api_key_here
ATLASCLOUD_BASE_URL=https://api.atlascloud.ai

# AI models (swap to try different models)
ATLASCLOUD_TEXT_MODEL=deepseek-ai/deepseek-v3.2
ATLASCLOUD_IMAGE_MODEL=black-forest-labs/flux-schnell
ATLASCLOUD_VIDEO_T2V_MODEL=alibaba/wan-2.2/t2v-480p-ultra-fast
ATLASCLOUD_VIDEO_I2V_MODEL=alibaba/wan-2.2/i2v-480p-ultra-fast

# Google AI (fallback for text generation, https://ai.google.dev/)
GOOGLE_AI_API_KEY=
GOOGLE_AI_BASE_URL=https://generativelanguage.googleapis.com/v1beta
GOOGLE_AI_TEXT_MODEL=gemini-2.0-flash
FORCE_GOOGLE_AI=false

# AI task processing
AI_TASK_POLL_INTERVAL=10
AI_TASK_TIMEOUT=300

# Swipe settings
SWIPE_BUCKET_DURATION=20
SWIPE_BUCKET_COUNT=30
SWIPE_BASE_PERCENT_MIN=0.01
SWIPE_BASE_PERCENT_MAX=0.03
SWIPE_RANDOM_MULTIPLIER_MIN=0.5
SWIPE_RANDOM_MULTIPLIER_MAX=2.0
SWIPE_STREAK_THRESHOLD=5
SWIPE_STREAK_PENALTY=0.7

# Screenshot service (for Pi display)
# Requires: uv run playwright install chromium
SCREENSHOT_ENABLED=true
SCREENSHOT_FRONTEND_URL=http://localhost:3000
SCREENSHOT_INTERVAL=0.2
SCREENSHOT_WIDTH=1920
SCREENSHOT_HEIGHT=1080
SCREENSHOT_QUALITY=85
